#!/usr/bin/env bash
# The actual compilation code lives in `bin/support/ruby_compile`. This file instead
# bootstraps the ruby needed and then executes `bin/support/ruby_compile`

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3
BIN_DIR=$(cd "$(dirname "$0")" || exit; pwd) # absolute path
BUILDPACK_DIR=$(dirname "$BIN_DIR")

# shellcheck source=bin/support/bash_functions.sh
source "$BIN_DIR/support/bash_functions.sh"

# Prefer local rubies directory if available
RUBIES_DIR="$BUILDPACK_DIR/rubies"
RUBY_VERSION="2.6.6"
LOCAL_RUBY_BIN="$RUBIES_DIR/ruby-$RUBY_VERSION/bin/ruby"

if [ -x "$LOCAL_RUBY_BIN" ]; then
  echo "[DEBUG] Using Ruby from local rubies directory: $LOCAL_RUBY_BIN"
  BOOTSTRAP_RUBY_BIN="$LOCAL_RUBY_BIN"
  RUBY_LIB_DIR="$RUBIES_DIR/ruby-$RUBY_VERSION/lib/ruby"
  
  # Set up environment variables
  export PATH="$RUBIES_DIR/ruby-$RUBY_VERSION/bin/:$PATH"
  export LD_LIBRARY_PATH="$RUBIES_DIR/ruby-$RUBY_VERSION/lib:${LD_LIBRARY_PATH:-}"
  export RUBYLIB="$RUBY_LIB_DIR/2.6.0:$RUBY_LIB_DIR/2.6.0/x86_64-linux:$RUBY_LIB_DIR/site_ruby/2.6.0:$RUBY_LIB_DIR/vendor_ruby/2.6.0:${RUBYLIB:-}"
  
  # Debug output
  echo "[DEBUG] LD_LIBRARY_PATH set to: $LD_LIBRARY_PATH"
  echo "[DEBUG] RUBYLIB set to: $RUBYLIB"
else
  echo "[DEBUG] Local Ruby not found at $LOCAL_RUBY_BIN. Falling back to bootstrap_ruby_dir."
  bootstrap_ruby_dir=$(install_bootstrap_ruby "$BIN_DIR" "$BUILDPACK_DIR")
  export PATH="$bootstrap_ruby_dir/bin/:$PATH"
  BOOTSTRAP_RUBY_BIN="$bootstrap_ruby_dir/bin/ruby"
fi

unset GEM_PATH

# Debugging info
echo "[DEBUG] PATH: $PATH"
echo "[DEBUG] Which ruby: $(which ruby)"
echo "[DEBUG] Ruby version: $(ruby --version 2>/dev/null || echo 'ruby not found')"

if detect_needs_java "$BUILD_DIR"; then
  cat <<EOM

       ## Warning: Your app needs java

       The Ruby buildpack determined your app needs java installed
       we recommend you add the jvm buildpack to your application:

         $ heroku buildpacks:add heroku/jvm --index=1

-----> Installing Java

EOM

  compile_buildpack_v2 "$BUILD_DIR" "$CACHE_DIR" "$ENV_DIR" "https://buildpack-registry.s3.us-east-1.amazonaws.com/buildpacks/heroku/jvm.tgz" "heroku/jvm"
fi

if [ ! -x "$BOOTSTRAP_RUBY_BIN" ]; then
  echo "[ERROR] Ruby binary not found at $BOOTSTRAP_RUBY_BIN. Exiting."
  exit 1
fi

# More debug info
"$BOOTSTRAP_RUBY_BIN" --version

"$BOOTSTRAP_RUBY_BIN" "$BIN_DIR/support/ruby_compile" "$@"
